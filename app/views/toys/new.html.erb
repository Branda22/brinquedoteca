
<div class="row">
  <div class="small-6 large-centered columns">
    <h3>Add new toy</h3>
    <%= form_for([@user, @toy]) do |f| %>
     <%= f.label :name %>
     <%= f.text_field :name %>
     
     <%= f.label :manufacturer %>
     <%= f.text_field :manufacturer %>
     
     <%= f.label :category %>
     <%= f.select :category, options_for_select(%w[Educational Therapeutic Recreational Other]) %>
     
     <%= f.submit "Submit new toy", class: "button" %>
    <% end %>
  </div>
</div>
