<div class="row">
    <div class="small 12 large-6 large-centered columns">
        <%= form_for([current_user, @toy], html: { multipart: true }) do |f| %>
         <%= f.label :name %>
         <%= f.text_field :name %>
         
         <%= f.label :manufacturer %>
         <%= f.text_field :manufacturer %>
         
         <%= f.label :category %>
         <%= f.select :category, options_for_select(%w[Educational Therapeutic Recreational Other]) %>
         
         <%= f.label :image %>
         <%= f.file_field :image %>
         
         <%= f.submit "Update toy", class: 'button' %>
         <% end %>
    </div>
</div>
