<% if @user.errors.any? %>
    <div data-alert class="alert-box alert radius">
        There are <%= pluralize(@user.errors.count, "error") %>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>